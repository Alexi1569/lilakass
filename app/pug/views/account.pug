extends ../includes/_layout

block header
  - var isIndex = false;
  include ../includes/_header

block main
  main.main
    - var breadcrumbs = ['Личный кабинет'];
    section.paccount
      include ../includes/_breadcrumbs
      .container
        .inner-top
          p.caption.caption--inner Личный кабинет
        .paccount__content.pb
          .paccount__left
            .paccount__left-top
              .paccount__left-img
                img(src="./img/review-1.jpg" alt="alt")
              .paccount__left-info
                p.paccount__left-name Анастасия Самойловиченко
                p.paccount__left-status Оптовый покупатель
            nav.paccount__left-nav
              ul
                li
                  a(href="#") данные аккаунта
                li
                  a(href="#") Адреса доставки
                li
                  a(href="#") Избранные товары
                li
                  a(href="#") История покупок
                li
                  a(href="#") Сменить пароль
                li
                  a(href="#") выход

          .paccount__right
            p.paccount__right-title Персональные данные
            form(action="#").paccount__personal
              .paccount__personal-inputs
                .form__group
                  .form__group-input
                    label(for="a-surname").form__group-label Фамилия
                    input(type="text" id="a-surname" class="only-text-input" value="Самойловиченко")
                  span.form__group-message Ошибка
                .form__group
                  .form__group-input
                    label(for="a-name").form__group-label Имя
                    input(type="text" id="a-name" class="only-text-input" value="Анастасия")
                  span.form__group-message Ошибка
                .form__group
                  .form__group-input
                    label(for="a-tel").form__group-label Имя
                    input(type="tel" id="a-tel" class="only-numbers-input" value="+ 38 (097) 123 - 32 - 57")
                  span.form__group-message Ошибка
                .form__group
                  .form__group-input
                    label(for="a-email").form__group-label Email
                    input(type="email" id="a-email" value="samoilovichenko@mail.com")
                  span.form__group-message Ошибка
              button.btn.btn--linear.paccount__personal-btn
                span Сохранить
